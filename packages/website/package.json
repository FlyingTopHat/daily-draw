{
  "name": "website",
  "version": "1.0.0",
  "private": true,
  "description": "Draw By Days website",
  "main": "handler.js",
  "scripts": {
    "clean": "rimraf build/*",
    "start": "react-scripts-ts start",
    "eject": "react-scripts-ts eject",
    "build": "yarn clean && yarn react-scripts-ts build",
    "start:mock:with-image": "json-server mock/dailyImageApi-with-image.json --routes mock/routes.json --port=3001 --static ./mock/public",
    "start:mock:without-image": "json-server mock/dailyImageApi-without-image.json --port=3001",
    "test": "CI=true react-scripts-ts test --env=jsdom",
    "test:integration": "yarn cypress run",
    "build:prod": "yarn clean && REACT_APP_DAILY_IMAGE_API_URL=https://api.drawbydays.com yarn react-scripts-ts build",
    "deploy:prod": "yarn build:prod && yarn deploy:prod:domain && yarn deploy:prod:s3",
    "deploy:prod:s3": "sls client deploy --no-confirm --stage prod",
    "deploy:prod:domain": "sls deploy -v --stage prod",
    "build:dev": "yarn clean && REACT_APP_DAILY_IMAGE_API_URL=https://api-dev.drawbydays.com yarn react-scripts-ts build",
    "deploy:dev": "yarn build:dev && yarn deploy:dev:domain && yarn deploy:dev:s3",
    "deploy:dev:s3": "sls client deploy --no-confirm --stage dev",
    "deploy:dev:domain": "sls deploy -v --stage dev",
    "remove:dev": "yarn remove:dev:domain && yarn remove:dev:s3",
    "remove:dev:s3": "mkdir -p build && sls client remove --no-confirm --stage dev",
    "remove:dev:domain": "sls remove -v --stage dev",
    "build:ci": "yarn clean && REACT_APP_DAILY_IMAGE_API_URL=https://api-ci.drawbydays.com yarn react-scripts-ts build",
    "deploy:ci": "yarn build:ci && yarn deploy:ci:domain && yarn deploy:ci:s3",
    "deploy:ci:s3": "sls client deploy --no-confirm --stage ci",
    "deploy:ci:domain": "sls deploy -v --stage ci",
    "remove:ci": "yarn remove:ci:domain && yarn remove:ci:s3",
    "remove:ci:s3": "mkdir -p build && sls client remove --no-confirm --stage ci",
    "remove:ci:domain": "sls remove -v --stage ci"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-router-dom": "^4.3.1",
    "react-scripts-ts": "3.1.0",
    "semantic-ui-css": "^2.4.1",
    "semantic-ui-react": "^0.85.0",
    "serverless-finch": "^2.4.2",
    "serverless-stack-output": "^0.2.3",
    "serverless-stage-manager": "^1.0.5"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/jest": "^24.0.6",
    "@types/node": "^11.9.4",
    "@types/react": "^16.8.4",
    "@types/react-dom": "^16.8.2",
    "@types/react-router-dom": "^4.3.1",
    "daily-image-api": "^1.0.0",
    "json-server": "^0.15.0",
    "typescript": "^3.3.3333",
    "cypress": "^3.3.1"
  }
}
