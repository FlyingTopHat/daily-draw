{
  "name": "website",
  "version": "1.0.0",
  "private": true,
  "main": "src/index.tsx",
  "homepage": "http://draw-by-days.s3-website-us-east-1.amazonaws.com",
  "config": {
    "deployment_path": "../../deployment/environments/dev/website"
  },
  "dependencies": {
    "@material-ui/core": "latest",
    "@types/react": "*",
    "@types/react-dom": "*",
    "axios": "^0.18.0",
    "image-lib": "^1.0.0",
    "react": "latest",
    "react-dom": "latest",
    "react-scripts-ts": "latest"
  },
  "devDependencies": {
    "@types/jest": "*",
    "@types/node": "*",
    "rimraf": "^2.6.2",
    "typescript": "latest"
  },
  "scripts": {
    "clean": "rimraf build/*",
    "lint": "tslint -c tslint.json 'src/**/*.ts{,x}'",
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build",
    "deploy": "cd $npm_package_config_deployment_path && terraform apply -auto-approve -input=false",
    "publish:s3": "WEBSITE_BUCKET_NAME=$(cd $npm_package_config_deployment_path && terraform output bucket_name) && aws s3 cp --recursive ./build s3://$WEBSITE_BUCKET_NAME/"
  }
}
