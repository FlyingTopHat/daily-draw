{
  "name": "daily-image-api",
  "version": "1.0.0",
  "private": true,
  "description": "Provides read/write of daily images",
  "scripts": {
    "start": "serverless dynamodb install && serverless offline start",
    "build": "serverless package -v",
    "deploy": "serverless deploy -v",
    "remove": "serverless remove -v",
    "deploy-prod": "serverless --stage=production deploy",
    "deploy-appsync": "serverless deploy-appsync",
    "update-appsync": "serverless update-appsync",
    "delete-appsync": "serverless delete-appsync",
    "testing": "echo daily-image-api"
  },
  "dependencies": {
    "serverless": "^1.41.0",
    "serverless-appsync-plugin": "^1.1.1"
  },
  "devDependencies": {
    "serverless-appsync-offline": "^1.3.2",
    "serverless-dynamodb-local": "^0.2.37",
    "serverless-offline": "^4.9.4"
  }
}
