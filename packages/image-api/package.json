{
  "name": "image-api",
  "version": "1.0.0",
  "private": true,
  "config": {
    "deployment_path": "../../deployment/environments/dev/image-api",
    "artifact_name": "retrieve-image-lambda.zip"
  },
  "dependencies": {
    "aws-sdk": "^2.296.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.11",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.4",
    "@types/request": "^2.47.1",
    "axios": "^0.18.0",
    "jest": "^23.5.0",
    "request": "^2.88.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.5.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-config": "^7.5.0",
    "zip-webpack-plugin": "^3.0.0"
  },
  "scripts": {
    "lint": "tslint -c tslint.json '{src,test}/**/*.ts'",
    "test": "jest src",
    "test:integration": "IMAGE_API_URL=$(cd $npm_package_config_deployment_path && terraform output image_api_url) jest test --runInBand",
    "build": "webpack --env.output_filename $npm_package_config_artifact_name",
    "deploy": "export TF_VAR_lambda_filepath=$(pwd)/dist/$npm_package_config_artifact_name && export TF_VAR_lambda_key=$npm_package_version/$npm_package_config_artifact_name && cd $npm_package_config_deployment_path && terraform apply -auto-approve -input=false",
    "rollback": "cd $npm_package_config_deployment_path && terraform apply"
  }
}
