{
  "name": "image-api",
  "version": "1.0.0",
  "private": true,
  "config": {
    "deployment_path": "../../deployment/environments/dev/image-api"
  },
  "dependencies": {
    "aws-sdk": "^2.296.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.11",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.4",
    "@types/request": "^2.47.1",
    "axios": "^0.18.0",
    "jest": "^23.5.0",
    "request": "^2.88.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.5.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-config": "^7.5.0",
    "zip-webpack-plugin": "^3.0.0"
  },
  "scripts": {
    "lint": "tslint -c tslint.json '{src,test}/**/*.ts'",
    "test": "jest src",
    "test:integration": "IMAGE_API_URL=$(cd $npm_package_config_deployment_path && terraform output image_api_url) jest test --runInBand",
    "build": "webpack --env.version $npm_package_version",
    "rollback": "BUCKET_NAME=$(cd $npm_package_config_deployment_path && terraform output bucket_name)",
    "deploy": "BUCKET_NAME=$(cd $npm_package_config_deployment_path && terraform output bucket_name) && s3-deploy './dist/*.zip' --cwd './dist/' --private --region us-east-1 --bucket $BUCKET_NAME"
  }
}
