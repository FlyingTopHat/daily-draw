{
  "name": "image-api",
  "version": "1.0.0",
  "private": true,
  "config": {
    "deployment_path": "../deployment/environments/dev/image-api"
  },
  "scripts": {
    "lint": "tslint {src,test}/**/*.ts",
    "test": "jest src",
    "test:integration": "IMAGE_API_URL=$(cd $npm_package_config_deployment_path && terraform output image_api_url) jest test --runInBand",
    "pretest:integration": "yarn build:prod && yarn deploy",
    "build:dev": "webpack --mode development",
    "build:prod": "webpack",
    "deploy": "cd $npm_package_config_deployment_path && terraform apply -auto-approve -input=false",
    "deploy:dry-run": "cd $npm_package_config_deployment_path && terraform plan -input=false",
    "destroy": "cd $npm_package_config_deployment_path && terraform destroy -auto-approve -input=false"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.11",
    "@types/jest": "^23.3.1",
    "@types/node": "^10.9.4",
    "@types/request": "^2.47.1",
    "axios": "^0.18.0",
    "jest": "^23.5.0",
    "request": "^2.88.0",
    "ts-jest": "^23.1.3",
    "ts-loader": "^4.5.0",
    "tslint": "^5.11.0",
    "typescript": "^3.0.1",
    "webpack": "^4.16.5",
    "webpack-cli": "^3.1.0",
    "webpack-config": "^7.5.0",
    "zip-webpack-plugin": "^3.0.0"
  },
  "dependencies": {
    "aws-sdk": "^2.296.0"
  }
}
